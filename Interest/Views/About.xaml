<UserControl x:Class="Interest.Views.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interest.Views"
        xmlns:vm="clr-namespace:Interest.ViewModels"
        mc:Ignorable="d" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=vm:AboutViewModel, IsDesignTimeCreatable=True}"
        >
    <StackPanel>
        <Label Content="{Binding Text}"/>
        <Label Content="{Binding ProductName}"/>
        <Label Content="{Binding Version}"/>
        <Label Content="{Binding Copyright}"/>
        <Label Content="{Binding CompanyName}"/>
        <Label Content="{Binding Email}"/>
        <Label Content="{Binding Description}"/>
    </StackPanel>
</UserControl>
