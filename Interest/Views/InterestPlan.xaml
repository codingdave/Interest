<Page x:Class="Interest.Views.InterestPlan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:prism="http://prismlibrary.com/"
      prism:ViewModelLocator.AutoWireViewModel="True"
      xmlns:vm="clr-namespace:Interest.ViewModels"
      xmlns:model="clr-namespace:Interest.Models"
      xmlns:view="clr-namespace:Interest.Views"
      xmlns:local="clr-namespace:Interest"
      d:DataContext="{d:DesignInstance Type=vm:InterestPlanViewModel, IsDesignTimeCreatable=True}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterestPlan">

    <Page.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="10,5,10,5"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <local:PercentageConverter x:Key="percentageConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <Label Content="Loan (€):" />
            <TextBox Text="{Binding LoanAmount, StringFormat=C2, ConverterCulture='de-DE'}"/>
            <Label Content="Borrowing (%):" />
            <TextBox Text="{Binding BorrowingPercentage, StringFormat=p2, ConverterCulture='de-DE', Converter={StaticResource percentageConverter}}"/>
            <Label Content="Monthly Payment/Redemption (€):" />
            <TextBox Text="{Binding RedemptionAmount, StringFormat=C2, ConverterCulture='de-DE'}"/>
            <Label Content="Redemption (%):" />
            <TextBox Text="{Binding RedemptionPercentage, StringFormat=p2, ConverterCulture='de-DE', Converter={StaticResource percentageConverter}}" />
            <Label Content="Years:" />
            <TextBox Text="{Binding Years}" />
            <Label Content="Starting from:" />
            <TextBox Text="{Binding StartMonth, StringFormat=d, ConverterCulture='de-DE'}" />
            <Label Content="Unscheduled Repayment (%):" />
            <TextBox Text="{Binding UnscheduledRepaymentPercentage, ConverterCulture='de-DE', Converter={StaticResource percentageConverter}}" />
            <CheckBox Content="optimize extra repayments:" IsChecked="{Binding IsApplyAllUnscheduledRepayments}"/>
        </WrapPanel>
        <DataGrid Grid.Row="1"
            ItemsSource="{Binding Payments}" AutoGenerateColumns="False" CanUserAddRows="false">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Month, StringFormat=d, ConverterCulture='de-DE'}" Header="Month" FontWeight="Light" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=InitialDebt, StringFormat=C2, ConverterCulture='de-DE'}" Header="Remaining Debt" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=UnscheduledRepayment, StringFormat=C2, ConverterCulture='de-DE'}" Header="Unscheduled Repayment" />
                <DataGridTextColumn Binding="{Binding Path=ReducedDebt, StringFormat=C2, ConverterCulture='de-DE'}" Header="Reduced Debt" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=MonthlyPayment, StringFormat=C2, ConverterCulture='de-DE'}" Header="Payment" />
                <DataGridTextColumn Binding="{Binding Path=Interest, StringFormat=C2, ConverterCulture='de-DE'}" Header="Interest" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Path=Repayment, StringFormat=C2, ConverterCulture='de-DE'}" Header="Repayment" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2">
            <Label Content="TotalInterest: " />
            <Label Content="{Binding TotalInterest}" />
            <Label Content="Remaining Debt: " />
            <Label Content="{Binding ResidualDebt}" />
            <Label Content="Redemption Rate: " />
            <Label Content="{Binding RedemptionPercentage, StringFormat=p2, ConverterCulture='de-DE', Converter={StaticResource percentageConverter}}" />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Button Content="Reset" Command="{Binding ResetCommand}"/>
            <Button Content="Update" Command="{Binding UpdateCommand}"/>
        </StackPanel>
    </Grid>
</Page>
